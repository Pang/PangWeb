@page "/CreatePost";

<section class="container">
    <h3 class="text-start">Write something new!</h3>
    <EditForm Model="@BlogForm" OnValidSubmit="@SavePostToList">
        <div class="form-group row w-25">
            <InputText id="title" placeholder="Title" @bind-Value="@BlogForm.Title"></InputText><br/>
        </div>
        <div class="form-group row w-50">
            <InputTextArea id="summary" placeholder="Summary" @bind-Value="@BlogForm.Summary"></InputTextArea>
        </div>
        <button class="btn btn-success d-grid mt-2" type="submit">Submit</button>
    </EditForm>
</section>